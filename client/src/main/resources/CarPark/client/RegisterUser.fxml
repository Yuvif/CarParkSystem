<AnchorPane prefHeight="400.0" prefWidth="1036.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CarPark.client.controllers.RegisterUserController">
    <!-- The Beginning of Signup form -->
    <Label layoutX="175.0" layoutY="46.0" prefHeight="36.0" prefWidth="130.0" style="-fx-text-fill: #A9A9A9;" text="Sign-Up">
