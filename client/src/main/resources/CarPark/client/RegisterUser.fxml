    <TextField fx:id="userID" layoutX="90.0" layoutY="195.0" prefHeight="30.0" prefWidth="300.0" promptText="User ID" style="-fx-border-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
        <font>
            <Font name="SansSerif Regular" size="14.0" />
        </font>
    </TextField>
