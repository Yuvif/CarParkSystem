    <PasswordField fx:id="rePassword" layoutX="91.0" layoutY="340.0" prefHeight="30.0" prefWidth="300.0" promptText="Repeat Password" style="-fx-border-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
        <font>
            <Font name="SansSerif Regular" size="14.0" />
        </font>
    </PasswordField>

    <!-- Sign up button -->
    <Button fx:id="signUpButton" layoutX="179.0" layoutY="401.0" mnemonicParsing="false" onAction="#signUp" prefHeight="33.0" prefWidth="123.0" style="-fx-background-color: #52d987; -fx-text-fill: white; -fx-border-radius: 5; -fx-border-width: 2; -fx-border-color: #109302;" text="Sign-Up">
        <font>
            <Font name="SansSerif Regular" size="15.0" />
        </font>
    </Button>
   <ImageView fitHeight="516.0" fitWidth="476.0" layoutX="560.0">
      <image>
         <Image url="@../../assets/background.png" />
      </image>
   </ImageView>
   <TextField fx:id="firstName" layoutX="91.0" layoutY="100.0" prefHeight="30.0" prefWidth="300.0" promptText="First Name" style="-fx-border-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
      <font>
         <Font name="SansSerif Regular" size="14.0" />
